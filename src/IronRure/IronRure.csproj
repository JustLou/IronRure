<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	<TargetFramework>netstandard1.4</TargetFramework>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFramework);net47</TargetFrameworks>
    <VersionPrefix>1.0.0</VersionPrefix>
	<Author>Will Speak (@iwillspeak)</Author>
	<Description>
	  Bindings to the Rust `regex` crate from .NET.
	</Description>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net47' ">
    <PackageReference Include="IronRure.Batteries-Darwin" Version="2.6.0" />
    <PackageReference Include="IronRure.Batteries-Linux" Version="2.6.0" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="IronRure.Batteries-Windows" Version="2.6.1" >
	  <PrivateAssets>analyzers;build</PrivateAssets>
	</PackageReference>
  </ItemGroup>
</Project>
